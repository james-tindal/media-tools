{
  "name": "ai-tools",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "pkgroll",
    "watch": "pkgroll --watch",
    "dev": "./bin/dev.js",
    "link": "npm link # makes the items in package.json/bin available globally"
  },
  "exports": {
    "transcribe": "./dist/transcribe.js",
    "transform": "./dist/transform.js"
  },
  "bin": {
    "ai-tools": "./bin/run.js"
  },
  "oclif": {
    "bin": "ai-tools",
    "commands": "./dist/",
    "dirname": "ai-tools",
    "topicSeparator": " ",
    "plugins": [
      "@oclif/plugin-autocomplete"
    ]
  },
  "dependencies": {
    "@deepgram/sdk": "^4.11.2",
    "@oclif/core": "^4.5.3",
    "@oclif/plugin-autocomplete": "^3.2.34",
    "ahocon": "^0.2.7",
    "package-directory": "^8.1.0",
    "valibot": "^1.1.0"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "pkgroll": "^2.15.4",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}